{
    "__author__": "Claire Rioualen",
    "qsub": "-V -m a -d /data",
    "verbosity": "0",

    "genome": {
	"organism": "Pseudomonas_aeruginosa",
	"size": "6300000",
	"version": "pa",
	"file": "/data/genomes/pa/pa.fa"
    },

    "files": {
	"samples": "/data/Paeruginosa/samples.tab",
	"design": "/data/Paeruginosa/design.tab"
    },

    "reads": {
       	"qual_type": "sanger"
    },

    "dir": {
	"base": ".",
	"fg_lib": ".",
	"reads_source": "/data/Paeruginosa/",
	"results": "/data/results/Paeruginosa/",
	"reports": "/data/results/Paeruginosa/",
	"genome": "/data/genomes/",
	"r_libs": "lib/R-packages/"
    },

    "reports" : {
	"dag": "/data/results/Paeruginosa/dag",
	"rulegraph": "/data/results/Paeruginosa/rule"
    },

    "sickle":  { 
        "threshold": "20"
    },

    "fastqc": {
	"other_options": ""
    },

    "bwa": {
        "dir": "BWAIndex/",
	"threads": "10"
    },

    "bowtie2": {
	"index": "/data/genomes/pa/Bowtie2Index/pa.fa",
	"threads": "10", 
        "max_mismatches": "1"
    },

    "samtools": {
        "sort_by_name": ""    
    },

    "macs2": {
        "qval": "0.001",
        "keep_dup": "all",
        "mfold_min": "2",
        "mfold_max": "50",
        "other_options": "--call-summits"
    },


    "swembl": {
	"R": "0.1",
	"x": "1.2"
    },

    "homer": {
	"style": "factor",
	"genome": "/data/genomes/pa/pa.fa",
	"F": "2",
	"L": "2",
	"P": "0.01",
	"fdr": "0.01"
    },

    "spp": {
	"fdr": "0.01"
    },

    "bPeaks": {
	"IPcoeff": "2",
	"controlCoeff": "4",
	"log2FC": "1",
	"averageQuantiles": "0.8",
	"windowSize": "50",
	"windowOverlap": "40"
    },

    "rsat": {
	"verbosity": "1"
    },

    "oligo_analysis": {
	"count_oligo": "1 2 6"
    },
    
    "peak-motifs": {
		"tasks": "purge,seqlen,composition,disco,collect_motifs,motifs_vs_motifs,timelog,archive,synthesis,small_summary,motifs_vs_db,scan",
		"max_seq_len": "0",
		"nmotifs": "",
		"minol": "",
		"maxol": "",
		"motif_db": "prodoric tf $RSAT/public_html/motif_databases/prodoric_from_meme_151016.tf",
		"disco": "oligos,positions,dyads"
    }

}
