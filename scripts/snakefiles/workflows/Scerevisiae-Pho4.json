{
    "__description__": "ChIP-seq of Pho4 in high or no Pi context in S.cerevisiae.",
    "__author__": "Claire Rioualen",
    "data_source": "Gene Expression Omnibus, modENCODE", 
    "qsub": "-V -m a -d /workspace/france_genomique/Scerevisiae-Pho4",
    "verbosity": "1",

    "genome": {
	"organism": "Saccharomyces_cerevisiae",
	"size": "12157105",
	"genome_version": "sc",
	"base_url_fasta": "ftp://ftp.ensemblgenomes.org/pub/fungi/current/fasta/saccharomyces_cerevisiae/dna/",
	"sequence": "",
	"features": "",
	"RefSeq_to_std": "",
        "install_dir": ""
    },

    "files": {
	"samples": "data/Scerevisiae-Pho4/samples.tab",
	"design": "data/Scerevisiae-Pho4/design.tab"
    },

    "reads": {
       	"qual_type": "sanger"
    },

    "suffixes": {
	"trimmed": "_sickle-se-q20",
	"mapped":  "_sickle-se-q20_bwa",
	"macs2":  "_sickle-se-q20_bwa_macs2",
	"swembl":  "_sickle-se-q20_bwa_swembl_R0.01"
    },

    "dir": {
	"base": ".",
	"fg_lib": ".",
	"reads_source": "data/Scerevisiae-Pho4/",
	"results": "results/",
	"reports": "results/",
	"genome": "genomes/",
	"logs": "logs/"
    },

    "reports" : {
	"dag": "results/dag",
	"rulegraph": "results/rule"
    },

    "sickle":  { 
        "threshold": "20",
        "other_options": ""
    },

    "fastqc": {
	"other_options": ""
    },

    "bwa": {
	"index": "genomes/sc/BWAIndex/sc.fa",
	"suffix": "bwa",
	"threads": "10"
    },

    "macs2": {
	"qval": "0.05",
	"keep_dup": "all",
	"band_width": "250",
	"mfold_min": "2",
	"mfold_max": "50",
	"call_summits": "--call-summits",
	"other_options": ""
    },

    "swembl": {
	"R": "0.01"
    },

    "samtools": {
        "sort_by_name": ""    
    },

    "rsat": {
	"verbosity": "1"
    }

}
