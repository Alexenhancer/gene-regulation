#                       Rules                                    #
#================================================================#

rule count_oligo:
	"""Counts occurences of oligonucleotides of length N, as specified in the parameters.
	"""
	input: RESULTSDIR + "{peaks}_purge.fasta"
	params: oligo="{oligo}"
	output: RESULTSDIR + "{peaks}_{oligo}.txt"
	benchmark: RESULTSDIR + "{peaks}_count-seq_benchmark.json"
	shell: "oligo-analysis -l {params.oligo} -i {input} -o {output}"
