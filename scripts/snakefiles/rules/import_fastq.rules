"""Import fastq files from source directory to results directory.
"""

# Set parameters
if not "samples" in config["dir"].keys():
    config["dir"]["samples"] = config["dir"]["results"]

if not "reads_source" in config["dir"].keys():
    sys.exit("The reads_source directory must be defined in the config file")

rule import_fastq:
    input: config["dir"]["reads_source"] + "{reads}.fastq"
    output: config["dir"]["samples"] + "{reads}.fastq"
    shell:"cp {input} {output}"
