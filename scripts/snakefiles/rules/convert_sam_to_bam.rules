rule sam_to_bam:
    input: "{read_dir}/{gsm}/{gsm}_{aligneur}.sam"
    output: "{read_dir}/{gsm}/{gsm}_{aligneur}.bam"
    log: "{read_dir}/{gsm}/{gsm}_sam_to_bam.log"
    benchmark: "{read_dir}/{gsm}/{gsm}_sam_to_bam_benchmark.json"
    params: qsub=QSUB_PARAM+" -e {read_dir}/{gsm}/{gsm}_sam_to_bam_qsub.err -o {read_dir}/{gsm}/{gsm}_sam_to_bam_qsub.out"
    shell:"samtools view -bS -o {output} {input} 2> {log}"