{
    "__description__": "Parameters for the analysis of stress response in Desulfovibrio desulfuricans.",
    "__author__": "Jeanne Cheneby, Justine Long & Jacques van Helden",
    "data_source": "Jeff Cole",
    "organism": "",
    "genome_version": "",
    "qsub": "-V -m a -d ~/no-stress_project",

    "files": {
        "samples": "data/no-stress_samples.tab",
        "analyses": "",
        "snakefile": "~/no-stress_project/scripts/snakefiles/workflows/no-stress_analysis.py"
    },

    "dir": {
	   "data_root": "data/1258-BRM/",
        "reports": "reports"
    },

    "suffix": {
	   "reads_fwd": "_1",
	   "reads_rev": "_2"
    },

    "reports": {
	   "dag": "reports/dag",
	   "rulegraph": "reports/rulegraph"
    }, 

    "fastqc": {
        "other_options": ""
    },

    "sickle": { 
        "seq_type": "sanger",
        "threshold": "20",
        "other_options": ""
    },
    
    "bowtie2": {
        "index": "genome/Desulfovibrio_desulfuricans_ATCC_27774",
        "max_mismatches": "1",
        "other_options": ""
    },

    "samtools": {
        "sort_by_name": ""    
    },
    
    "htseq": {
        "ht_type": "bam",
        "order": "name",
        "stranded": "no",
        "minaqual": "10",
        "id_attr": "gene_id",
        "mode": "intersection-nonempty",
        "gff_file": "genome/Desulfovibrio_desulfuricans_subsp_desulfuricans_str_atcc_27774.GCA_000022125.1.27.gtf",
        "other_options": ""
    },

    "edgeR": {
        "N": ["N1", "N2", "N4"],
        "NN": ["NN2", "NN4", "NN5"], 
        "S": ["S1", "S4", "S5"],
        "SN": ["SN1", "SN2", "SN5"],
        "conditions": ["N", "S", "NN", "SN"],
        "cond1": ["N", "N", "S", "NN"],
        "cond2": ["NN", "S", "SN", "SN"]
    }
}
























